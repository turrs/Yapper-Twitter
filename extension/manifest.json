{
  "manifest_version": 3,
  "name": "Twitter Comment Helper",
  "version": "1.0",
  "description": "Ambil ID tweet dan auto-comment dari backend.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://x.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
} 

